  <script>
    document.querySelectorAll('.update-btn').forEach(function(button) {
      button.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const redeemTxId = this.getAttribute('data-redeem-tx-id');
        const status = document.querySelector('.status[data-id="' + id + '"]').value;
        const payoutNote = document.querySelector('.payoutNote[data-id="' + id + '"]').value;

  
        fetch('/api/v1/wallet/review-redeem', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            redeemTxId: Number(redeemTxId),
            payoutCanProceed: status == 'A' ? true : false,
            payoutNote: payoutNote
          }),
        })
        .then(response => response.json())
        // .then(data => console.log(data))
        .then(window.location.reload())
        .catch((error) => {
          console.error('Error:', error);
        });
      });
    });
  </script>
