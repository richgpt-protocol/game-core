<body>
  <div class="container">
    <%- include('sidebar') %>

    <div class="content-wrapper">
      <div class="table-area">
        <!-- <div class="wrapper"> -->
          <table>
            <thead>
              <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Status</th>
                <th>created date</th>
                <th>User wallet Id</th>
                <th>Wallet Address</th>
                <th>User Id</th>
                <th>Payout Note</th>
                <th>Action</th>
                <th>Submit</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<data.transactions.length; i++) {%>
                <tr>
                  <td class="id" data-id="<%= data.transactions[i].id %>"><%= data.transactions[i].redeemTx.id %></td>
                  <!-- <td><%= data.transactions[i].name %></td> -->
                  <td class="name" data-id="<%= data.transactions[i].id %>"><%= data.transactions[i].txType %></td>
                  <td><%= data.transactions[i].txAmount %></td>
                  <td class="email" data-id="<%= data.transactions[i].id %>"><%= data.transactions[i].status %></td>
                  <td><%= data.transactions[i].createdDate %></td>
                  <td><%= data.transactions[i].userWalletId %></td>
                  <td><%= data.transactions[i].userWallet.walletAddress %></td>
                  <td><%= data.transactions[i].userWallet.userId %></td>
                  <td>
                    <input type="text" class="payoutNote" data-id="<%= data.transactions[i].id %>" placeholder="Enter additional note">
                  </td>


                  <td>
                    <select class="status" data-id="<%= data.transactions[i].id %>">
                      <option value="A" <%= data.transactions[i].status === 'A' ? 'selected' : '' %>>Approve</option>
                      <option value="I" <%= data.transactions[i].status === 'I' ? 'selected' : '' %>>Reject</option>
                    </select>
                  </td>
                  <td>
                    <button class="update-btn" data-id="<%= data.transactions[i].id %>"  data-redeem-tx-id="<%= data.transactions[i].redeemTx.id %>" >Update</button>
                  </td>
                  <!-- <td><a href="/api/v1/admin/update-admin-view/<%= data.transactions[i].id %>">update</a></td> -->
                </tr>
              <% } %>
            </tbody>
          </table>
      </div>
      <div class="pagination">
        <% if (data.currentPage > 1) { %>
          <a href="?page=<%= data.currentPage - 1 %>">Previous</a>
        <% } %>
      
        <% for (let i = 1; i <= data.totalPages; i++) { %>
          <a href="?page=<%= i %>" class="<%= data.currentPage == i ? 'active' : '' %>"><%= i %></a>
        <% } %>
      
        <% if (data.currentPage < data.totalPages) { %>
          <a href="?page=<%= data.currentPage + 1 %>">Next</a>
        <% } %>
      </div>
    </div>
  </div>
