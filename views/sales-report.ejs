<body>

    <script>
        document.getElementById('salesReportForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const startDateInput = document.getElementById('startDate').value;
            const endDateInput = document.getElementById('endDate').value;

            const formatDate = (dateStr) => {
                const date = new Date(dateStr);
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                const year = date.getFullYear();
                return `${month}-${day}-${year}`;
            };

            const formattedStartDate = formatDate(startDateInput);
            const formattedEndDate = formatDate(endDateInput);

            document.getElementById('startDate').value = formattedStartDate;
            document.getElementById('endDate').value = formattedEndDate;
            // document.getElementById('salesReportForm').submit();

            event.target.submit();
        });
    </script>



    <div class="container">
        <%- include('sidebar', { user: data.user }) %>

            <div class="content-wrapper">

                <form id="salesReportForm" action="/back-office/sales-report" method="get">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" required>
                    <br>
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate" required>
                    <br>
                    <button type="submit">Get Sales Report</button>
                </form>

                <div class="table-area">
                    <!-- <div class="wrapper"> -->
                    <% if (data && data.bets) { %>
                        <h2>Sales Report</h2>
                        <div class="scrollable-table">

                            <table>
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Total Bet Amount</th>
                                        <th>Total Credit Used</th>
                                        <th>Bet Count</th>
                                        <th>User Count</th>
                                        <th>Total Payout</th>
                                        <th>Total Payout Rewards</th>
                                        <th>Commission Amount</th>
                                        <th>Total Profit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% Object.keys(data.bets).forEach(function(date) { %>
                                        <tr>
                                            <td>
                                                <%= date %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].totalBetAmount %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].totalCreditAmount %>
                                            </td>
                                            <td>
                                                <%= data.bets[date].betCount %>
                                            </td>
                                            <td>
                                                <%= data.bets[date].userCount %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].totalPayout %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].totalPayoutRewards %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].commissionAmount %>
                                            </td>
                                            <td>
                                                $<%= data.bets[date].totalBetAmount - (data.bets[date].totalPayoutRewards + data.bets[date].commissionAmount) %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                            <p>No data available</p>
                            <% } %>
                </div>
            </div>
    </div>
    <div class="bg"></div>
    <div class="bg"></div>
