<body>
  <div class="container">
    <%- include('sidebar') %>

    <div class="content-wrapper">
      <div class="table-area">
        <div class="staff-menu">
          <button class="staff-menu-btn"><a href="/back-office/create-admin">Create Admin</a></button>
        </div>
        <!-- <div class="wrapper"> -->
          <table>
            <thead>
              <tr>
                <th>staffId</th>
                <th>name</th>
                <th>username</th>
                <th>email</th>
                <th>created date</th>
                <th>created by</th>
                <th>status</th>
                <th>admin type</th>
                <th>action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<data.staffs.length; i++) {%>
                <tr>
                  <td><%= data.staffs[i].id %></td>
                  <!-- <td><%= data.staffs[i].name %></td> -->
                  <td class="name" data-id="<%= data.staffs[i].id %>"><%= data.staffs[i].name %></td>
                  <td><%= data.staffs[i].username %></td>
                  <td class="email" data-id="<%= data.staffs[i].id %>"><%= data.staffs[i].emailAddress %></td>
                  <td><%= data.staffs[i].createdDate %></td>
                  <td><%= data.staffs[i].createdBy %></td>
                  <td>
                    <select class="status" data-id="<%= data.staffs[i].id %>">
                      <option value="A" <%= data.staffs[i].status === 'A' ? 'selected' : '' %>>Active</option>
                      <option value="I" <%= data.staffs[i].status === 'I' ? 'selected' : '' %>>Inactive</option>
                      <option value="S" <%= data.staffs[i].status === 'S' ? 'selected' : '' %>>Suspended</option>
                      <!-- Add more options as needed -->
                    </select>
                  </td>
                  <td>
                    <select class="adminType" data-id="<%= data.staffs[i].id %>">
                      <option value="S" <%= data.staffs[i].adminType === 'S' ? 'selected' : '' %>>SuperUser</option>
                      <option value="F" <%= data.staffs[i].adminType === 'F' ? 'selected' : '' %>>Finance</option>
                      <option value="O" <%= data.staffs[i].adminType === 'O' ? 'selected' : '' %>>Operations</option>
                      <option value="B" <%= data.staffs[i].adminType === 'B' ? 'selected' : '' %>>Bot</option>
                      <!-- Add more options as needed -->
                    </select>
                  </td>
                  <td>
                    <button class="update-btn" data-id="<%= data.staffs[i].id %>">Update</button>
                  </td>
                  <!-- <td><a href="/api/v1/admin/update-admin-view/<%= data.staffs[i].id %>">update</a></td> -->
                </tr>
              <% } %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
