  <script>
    document.querySelectorAll('.update-btn').forEach(function(button) {
      button.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const status = document.querySelector('.status[data-id="' + id + '"]').value;
        const adminType = document.querySelector('.adminType[data-id="' + id + '"]').value;
        const name=document.querySelector('.name[data-id="' + id + '"]').textContent;
        const emailAddress = document.querySelector('.email[data-id="' + id + '"]').textContent;
  
        fetch('/api/v1/admin/update-admin/' + id, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            name,
            status,
            adminType,
            emailAddress
          }),
        })
        .then(response => response.json())
        .then(data => console.log(data))
        .catch((error) => {
          console.error('Error:', error);
        });
      });
    });
  </script>
